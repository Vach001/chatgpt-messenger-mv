{
  "compilerOptions": {
    "module": "commonjs", 
    "noImplicitReturns": true, 
    "noUnusedLocals": true, 
    "outDir": "lib", 
    "sourceMap": true, 
    "strict": true, 
    "forceConsistentCasingInFileNames": true, 
    "target": "es2017", 
    "skipLibCheck": true, 
    "types": ["node"], 
    "baseUrl": "./src", 
    "paths": {
      "*": ["node_modules/*", "src/types/*"] 
    }
  },
  "compileOnSave": true, 
  "include": [
    "src/**/*" 
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts" 
  ]
}
